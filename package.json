{
  "name": "markup",
  "version": "1.0.0",
  "description": "Write markdown with a WYSIWYG and get the source.",
  "main": "main.js",
  "scripts": {
    "start": "npm-run-all --parallel electron lint",
    "electron": "electron main.js",
    "lint": "node_modules/jshint/bin/jshint --verbose --reporter=node_modules/jshint-stylish src",
    "package": "electron-packager ./ markup --platform=all --arch=x64 --version=0.37.5"
  },
  "jshintConfig": {
    "esversion": 6,
    "asi": true
  },
  "dependencies": {
    "electron-compile": "^3.0.1",
    "font-awesome": "^4.6.1",
    "github-markdown-css": "^2.2.1",
    "highlight.js": "^9.3.0",
    "remarkable": "^1.6.2",
    "to-markdown": "^3.0.0",
    "toolbarjs": "^2.2.0"
  },
  "devDependencies": {
    "electron-compilers": "^3.0.0",
    "electron-prebuilt-compile": "^0.37.6",
    "jshint": "^2.9.1",
    "jshint-stylish": "^2.1.0",
    "npm-run-all": "^1.7.0"
  },
  "keywords": [
    "markdown",
    "text",
    "desktop"
  ],
  "author": "Timur Uzel <timurt.uzel@gmail.com>",
  "homepage": "https://github.com/timurtu/markdown-text-editor#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/timurtu/markup.git"
  },
  "bugs": {
    "url": "https://github.com/timurtu/markdown-text-editor/issues"
  },
  "license": "ISC"
}
